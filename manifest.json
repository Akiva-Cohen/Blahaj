{
  "manifest_version" : 3,
  "name": "Bl√•haj",
  "description": "make sure your browser always shows the right word for the sea creature",
  "version": "2.1.0",
  "icons": {
    "16" : "16bla.png",
    "48" : "48bla.png",
    "128" : "128bla.png"
  },
  "action": {
    "default_icon" : "128bla.png",
    "default_popup" : "show.html"
  },
  "content_scripts" :[
    {
      "matches" : ["*://*/*"],
      "all_frames" : true,
      "js": ["Actions.js"],
      "run_at" : "document_end"
    }
  ],
  "permissions": [
    "storage"
  ]
}