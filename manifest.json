{
  "manifest_version" : 3,
  "name": "Bl√•haj",
  "description": "make sure your browser always shows the right word for the sea creature",
  "version": "1.5.0",
  "action": {
    "default_icon" : "Icon.png",
    "default_popup" : "show.html"
  },
  "content_scripts" :[
    {
      "matches" : ["*://*/*"],
      "all_frames" : true,
      "js": ["Actions.js"],
      "run_at" : "document_end"
    }
  ],
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ]
}